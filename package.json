{
  "name": "univ",
  "private": true,
  "scripts": {
    "dev": "npm run build && node test.js",
    "clean": "rm -rfv ./packages/**/lib",
    "build": "npm run clean && ./node_modules/.bin/babel --config-file ./babel.config.js --verbose --relative ./packages/**/src/ -d ../lib",
    "lint": "./node_modules/.bin/eslint ./packages/**",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "test": "nyc mocha --require esm --reporter spec --tiemout 10000 --bail --exit ./**/*.test.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-add-module-exports": "^1.0.2",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "esm": "^3.2.25",
    "husky": "^4.0.10",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "mocha": "^7.0.0",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "esm": {
    "cjs": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {}
}
